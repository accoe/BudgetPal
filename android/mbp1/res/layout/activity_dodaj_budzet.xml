<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DodajBudzet" >

    <TextView
        android:id="@+id/titleAddNewBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Dodaj nowy budÅ¼et"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textAddNewBudgetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleAddNewBudget"
        android:layout_marginTop="32dp"
        android:text="Nazwa"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editAddNewBudgetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAddNewBudgetName"
        android:layout_below="@+id/textAddNewBudgetName"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textAddNewBudgetDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editAddNewBudgetName"
        android:layout_below="@+id/editAddNewBudgetName"
        android:layout_marginTop="28dp"
        android:text="Opis"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editAddNewBudgetDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAddNewBudgetDescription"
        android:layout_below="@+id/textAddNewBudgetDescription"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonAddNewBudgetAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editAddNewBudgetDescription"
        android:layout_below="@+id/editAddNewBudgetDescription"
        android:layout_marginTop="84dp"
        android:text="Dodaj" />

</RelativeLayout>
